{
  "name": "caiide-onboarding",
  "displayName": "CAIIDE++ Onboarding",
  "description": "First-launch onboarding wizard for CAIIDE++",
  "version": "0.1.0",
  "publisher": "halfservers",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "caiide-onboarding.showWizard",
        "title": "Show Onboarding Wizard",
        "category": "CAIIDE++"
      },
      {
        "command": "caiide-onboarding.resetOnboarding",
        "title": "Reset Onboarding (Show Wizard Again)",
        "category": "CAIIDE++"
      }
    ],
    "configuration": {
      "title": "CAIIDE++ Onboarding",
      "properties": {
        "caiide-onboarding.showOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Show onboarding wizard on first startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}
